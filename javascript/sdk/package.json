{
  "name": "@forevervm/sdk",
  "version": "0.1.30",
  "description": "Developer SDK for foreverVM",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "format": "prettier --write \"src/**/*.ts\"",
    "check-format": "prettier --check src/**/*.ts",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "src"
  ],
  "author": "Jamsocket",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/ws": "^8.5.13"
  },
  "dependencies": {
    "isomorphic-ws": "^5.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4",
    "ws": "^8.18.0"
  }
}
